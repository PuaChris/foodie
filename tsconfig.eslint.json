// Special TypeScript project file to lint files outside of the project
{
  "extends": "./tsconfig.json",
  "include": [
    "typings",
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.scss",
    "__tests__",
    "__mocks__", 
    "next.config.js",
    "eslintrc.js",
    ],
  "exclude": [
    "node_modules/",
    "src/ssr-server.ts"
  ]
}